<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorIcon"
    tools:context=".IntroFragment">

    <ImageView
        android:id="@+id/intro_fragment_icon"
        android:layout_width="162dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/appicon"
        android:layoutDirection="inherit"
        android:src="@drawable/grocery_buddy_icon" />

    <Button
        android:id="@+id/pantry_button"
        android:layout_width="126dp"
        android:layout_height="83dp"
        android:layout_below="@+id/intro_fragment_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="286dp"
        android:text="@string/pantry_button"
        tools:text="Pantry" />

</RelativeLayout>