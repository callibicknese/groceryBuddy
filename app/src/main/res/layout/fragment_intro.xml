<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/IntroLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#134017"
    tools:context=".IntroFragment">

    <ImageView
        android:id="@+id/intro_fragment_icon"
        android:layout_width="320dp"
        android:layout_height="217dp"
        android:layout_marginStart="-6dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/appicon"
        android:layoutDirection="inherit"
        android:src="@drawable/grocery_buddy_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_conversion_wrapHeight="525"
        tools:layout_conversion_wrapWidth="425" />

    <Button
        android:id="@+id/pantry_button"
        android:layout_width="126dp"
        android:layout_height="83dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="285dp"
        android:text="@string/pantry_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/intro_fragment_icon"
        app:layout_constraintVertical_bias="0.176"
        tools:layout_conversion_wrapHeight="218"
        tools:layout_conversion_wrapWidth="331"
        tools:text="Pantry" />

    <Button
        android:id="@+id/shop_list_button"
        android:layout_width="126dp"
        android:layout_height="83dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:text="@string/shopping_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.601"
        app:layout_constraintStart_toEndOf="@+id/pantry_button"
        app:layout_constraintTop_toBottomOf="@+id/intro_fragment_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>